syntax on

set noerrorbells
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nu
set nowrap
set mouse=a
set smartcase
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set number relativenumber

set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey
